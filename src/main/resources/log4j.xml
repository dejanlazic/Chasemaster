  </category>

  <category name="conductor.framework.jndi">
    <level value="ERROR" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.bscs.proxy.db">
    <level value="DEBUG" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.cms.proxy.corba">
    <level value="ERROR" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.webservice.listener">
    <level value="ERROR" />
