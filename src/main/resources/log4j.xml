<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- ===================================================================== -->
<!-- -->
<!-- Log4j Configuration -->
<!-- -->
<!-- ===================================================================== -->

<!-- | For more configuration infromation and examples see the Jakarta Log4j | owebsite: 
  http://jakarta.apache.org/log4j -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

  <!-- A size based file rolling appender for framework logging -->
  <appender name="LOG_FILE" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="${catalina.home}/logs/Chasemaster_tools.log" />
    <param name="Append" value="true" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%d] [%-5p] [%t] [%c{1}] [%C] [%M] - %m%n" />
    </layout>
  </appender>

  <!-- A size based file rolling appender for framework logging -->
  <appender name="APP_LOG_FILE" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="${catalina.home}/logs/Chasemaster.log" />
    <param name="Append" value="true" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%d] [%-5p] [%c{1}] - %m%n" />
    </layout>
  </appender>

  <appender name="ERR_LOG_FILE" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="${catalina.home}/logs/Chasemaster_errors.log" />
    <param name="Append" value="true" />
    <param name="MaxFileSize" value="100MB" />
    <param name="MaxBackupIndex" value="100" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%d] [%-5p] [%t] [%c{1}] - %m%n" />
    </layout>
  </appender>

  <category name="com.chasemaster">
    <level value="DEBUG" />
    <appender-ref ref="APP_LOG_FILE" />
  </category>



  <category name="org.apache">
    <level value="WARN" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="org.hibernate">
    <level value="WARN" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="org.hibernate.transaction">
    <level value="WARN" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="org.springframework.jdbc">
    <level value="ERROR" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="org.springframework">
    <level value="INFO" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="com.sshtools">
    <level value="WARN" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="com.maverick">
    <level value="WARN" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.creditcard.proxy.realex">
    <level value="ERROR" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor">
    <level value="DEBUG" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.framework">
    <level value="INFO" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.batch.script">
    <level value="DEBUG" />
    <appender-ref ref="LOG_FILE" />
  </category>

  <category name="conductor.sms.proxy">
    <level value="WARN" />
